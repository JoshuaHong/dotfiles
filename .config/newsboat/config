# The Newsboat configuration file.

# Colors
color listnormal default default
color listfocus default default reverse
color listnormal_unread default default bold
color listfocus_unread default default bold underline
color info magenta black bold
color article default default
highlight feedlist "[║]" blue default bold
highlight feedlist "╠═.*" blue default bold

# Formats
feedlist-format "%?T?║%3n %9u %t&╠══════════════════════════════════════════════════ %t? "
articlelist-format "%4i  %f %D  %?T?|%-17T|  ?%t "
selecttag-format "  %T (%n unread: %f/%u feeds)"
datetime-format "%b %d %Y"

# Macros
bind-key j quit
bind-key k down
bind-key l up
bind-key ; open
bind-key a open-all-unread-in-browser-and-mark-read
bind-key ENTER open-in-browser-and-mark-read
bind-key f toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key s pagedown
bind-key d pageup
